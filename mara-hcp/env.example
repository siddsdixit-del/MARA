# MARA HCP Environment Variables
# Copy this file to .env and update with your values

# Application
APP_ENV=development
APP_VERSION=1.0.0
LOG_LEVEL=info

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mara_hcp
POSTGRES_USER=mara
POSTGRES_PASSWORD=dev_password
POSTGRES_SSL_MODE=disable

# TimescaleDB
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=mara_metrics
TIMESCALE_USER=mara
TIMESCALE_PASSWORD=dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=mara_audit
MONGO_USER=mara
MONGO_PASSWORD=dev_password

# Neo4j
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dev_password

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=mara-hcp

# Consul
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token

# API Gateway
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# External APIs (for production)
ERCOT_API_KEY=
CRYPTO_EXCHANGE_API_KEY=
WEATHER_API_KEY=

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Security
JWT_SECRET=dev-jwt-secret-change-in-production
API_KEY_SALT=dev-api-key-salt-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-chars-min

# Feature Flags
ENABLE_SIMULATION=true
ENABLE_METRICS_EXPORT=true
ENABLE_TRACING=true
ENABLE_DEBUG=true

